    "version": "0.2.0",
    "configurations": [
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "uninit",
            "skipFiles": ["<node_internals>/**"],
            "program": "${workspaceFolder}/bin/uninit.js",
            "outFiles": ["${workspaceFolder}/**/*.js"]
        },
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "run-tasks",
            "skipFiles": ["<node_internals>/**"],
            "program": "${workspaceFolder}/test/run-tasks.test.js",
            "outFiles": ["${workspaceFolder}/**/*.js"]
        },
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "parse-command",
            "skipFiles": ["<node_internals>/**"],
            "program": "${workspaceFolder}/test/parse-command.test.js",
            "outFiles": ["${workspaceFolder}/**/*.js"]
        }
    ]
}
